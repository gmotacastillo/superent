<h4>Filter</h4>

<div class="filter-div" data-controller="slider">

  <div class=“footer-container”>
    <div class=“footer-elements-container”>
    <%= form_with url: cars_path, method: :get, remote: true do  |f| %>
      <div class="location-container">
      <h6>Location</h6>
      <%= f.text_field :location, placeholder: "  Please choose a city", class: 'location-text-field' %>
      &nbsp
    </div>

    <div class="availability-container">
      <h6>Availability</h6>
      <p>From</p>
      <br>
      <%= f.date_field :start_date, class: 'date-field' %>
      &nbsp
      <p>To</p>
      <br>
      <%= f.date_field :end_date, class: 'date-field' %>
    </div>

    <div class="graph-container">
      <p>Price / Day</p>
      <%= image_tag("graphic.png", size:"265x100") %>
      <div data-slider-target="mySlider"
      data-min="250"
      data-max="1750"
      data-range="2000"
    ></div>
    </div>

    <div class="price-container">
      <div class="text-field-container">
          <%= f.number_field :start_price, placeholder: "      Min", class: 'price-text-field', value:"250", data: { slider_target: "minValue" } %>
          <%= f.number_field :end_price, placeholder: "      Max", class: 'price-text-field', value:"1750", data: { slider_target: "maxValue" } %>
      </div>
      <div class="book-btn">
      <%= f.submit "Filter", class: 'button-field' %>
      </div>

      <% end %>
      </div>
    </div>
  </div>
</div>
